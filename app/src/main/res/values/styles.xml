<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="default_style">
        <item name="android:textColor">@color/white_blue</item>
        <item name="android:fontFamily">@font/vinque</item>
    </style>

    <style name="score_style">
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:fontFamily">@font/vinque</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="LightButton">
        <item name="android:background">@drawable/light_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/cheapprofonts_amerikapro</item>
    </style>

    <style name="DarkButton">
        <item name="android:background">@drawable/dark_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/cheapprofonts_amerikapro</item>
    </style>

</resources>
